<plugin>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="gov.redhawk.ide.codegen.jet.python.launchComponent"
            icon="icons/RedHawk_Logo16x.gif"
            id="gov.redhawk.ide.codegen.jet.python.ui.launchComponent">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="gov.redhawk.ide.codegen.jet.python.ui.PyDevLaunchShortcut"
            icon="icons/RedHawk_Logo16x.gif"
            id="gov.redhawk.ide.codegen.jet.python.ui.shortcut"
            label="%shortcut.label"
            modes="run,debug">
         <description
               description="%description.description"
               mode="debug">
         </description>
         <description
               description="%description.description.0"
               mode="run">
         </description>
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <and>
                           <test
                                 property="org.eclipse.core.resources.name"
                                 value="*.spd.xml">
                           </test>
                           <test
                                 args="gov.redhawk.ide.codegen.jet.python.PythonGenerator"
                                 forcePluginActivation="true"
                                 property="gov.redhawk.ide.codegen.containsType">
                           </test>
                        </and>
                     </adapt>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="gov.redhawk.ide.codegen.jet.python.ui.PyDevLaunchConfigurationTabGroup"
            id="gov.redhawk.ide.codegen.jet.python.ui.launchComponent"
            type="gov.redhawk.ide.codegen.jet.python.launchComponent">
      </launchConfigurationTabGroup>
   </extension>

</plugin>

<%@ jet package="gov.redhawk.ide.codegen.jet.cplusplus.template"
class="BuildShTemplate"
skeleton="../generator.skeleton"
%>
#!/bin/sh

if [ "$1" = 'clean' ]; then
  make clean
else
  # Checks if build is newer than makefile (based on modification time)
  if [ ! -e configure ] || [ ! -e Makefile.in ] || [ configure.ac -nt Makefile ] || [ Makefile.am -nt Makefile ]; then
    ./reconf
    ./configure
  fi
  make
  exit 0
fi
